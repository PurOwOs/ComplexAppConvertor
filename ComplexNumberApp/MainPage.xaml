<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComplexNumberApp.MainPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="PolarForm"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="converts complex numbers to their goniometric (polar) form"
               FontSize="12"
               HorizontalOptions="Center" />
        
        <Label Text="Enter real part (x):" />
        <Entry x:Name="RealEntry" Keyboard="Numeric" />

        <Label Text="Enter imaginary part (y):" />
        <Entry x:Name="ImaginaryEntry" Keyboard="Numeric" />

        <Button Text="Calculate"
                Clicked="OnCalculateClicked"
                BackgroundColor="LightBlue" />

        <Label x:Name="ResultLabel"
               FontSize="20"
               TextColor="Green"
               IsVisible="False" />

        <!-- 🔹 Credits Section -->
        <Label Text="By: Zdeněk Dudek"
               FontSize="5"
               TextColor="Cyan"
               HorizontalOptions="End" 
               VerticalOptions="End"/>

        <Label Text="Discord: purowo"
               FontSize="5"
               TextColor="Cyan"
               HorizontalOptions="End" 
               VerticalOptions="End" />

        <Label Text="Telegram: @PurOwO"
               FontSize="5"
               TextColor="Cyan"
               HorizontalOptions="End" 
               VerticalOptions="End" />
    </VerticalStackLayout>
</ContentPage>
