<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComplexNumberApp.MainPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Complex Number Calculator"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="Enter real part (x):" />
        <Entry x:Name="RealEntry" Keyboard="Numeric" />

        <Label Text="Enter imaginary part (y):" />
        <Entry x:Name="ImaginaryEntry" Keyboard="Numeric" />

        <Button Text="Calculate"
                Clicked="OnCalculateClicked"
                BackgroundColor="LightBlue" />

        <Label x:Name="ResultLabel"
               FontSize="18"
               TextColor="DarkGreen"
               IsVisible="False" />

        <!-- 🔹 Credits Section -->
        <Label Text="By: Zdeněk Dudek"
               FontSize="14"
               TextColor="Cyan"
               HorizontalOptions="Center" />

        <Label Text="Discord: purowo"
               FontSize="14"
               TextColor="Cyan"
               HorizontalOptions="Center" />

        <Label Text="Telegram: @PurOwO"
               FontSize="14"
               TextColor="Cyan"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
